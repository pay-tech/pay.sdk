<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/tec_background_dim"
  tools:context=".hybrid.presentation.main.TecPayActivity">

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="42dp"
    android:orientation="vertical">

    <FrameLayout
      android:id="@+id/toolbar"
      android:layout_width="match_parent"
      android:layout_height="42dp"
      android:background="@android:color/black"
      android:orientation="horizontal">

      <TextView
        android:id="@+id/pay_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:textColor="@android:color/white"
        tools:text="Tec-Pay" />

      <ImageView
        android:id="@+id/pay_close"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_gravity="start|center_vertical"
        android:src="@drawable/tec_ic_close_white_24dp" />
    </FrameLayout>

    <com.tec.pay.android.hybrid.presentation.tab.HybridTabView
      android:id="@+id/pay_web"
      android:layout_width="match_parent"
      android:layout_height="match_parent" />

  </LinearLayout>
</FrameLayout>